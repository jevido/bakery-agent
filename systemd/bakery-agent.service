[Unit]
Description=Bakery Agent Service
After=network-online.target
Wants=network-online.target

[Service]
Type=notify
NotifyAccess=main
WatchdogSec=60s
ExecStart=/usr/local/bin/bakery daemon
Restart=always
RestartSec=5
User=root
Group=root
WorkingDirectory=/etc/bakery/agent
StandardOutput=append:/var/log/bakery/agent.log
StandardError=append:/var/log/bakery/agent.log

[Install]
WantedBy=multi-user.target
